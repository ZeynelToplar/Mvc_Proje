@using EntityLayer.Concrete
@model List<Category>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-hover" style="margin-top:20px !important">
	<tr>
		<th>#</th>
		<th>Kategori</th>
		<th>Sil</th>
		<th>Güncelle</th>
		<th>Başlıkar</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<th>@item.CategoryID</th>
			<td>@item.CategoryName</td>
			<td><a href="/AdminCategory/DeleteCategory/@item.CategoryID" class="btn btn-danger">Sil</a></td>
			<td><a href="/AdminCategory/UpdateCategory/@item.CategoryID" class="btn btn-success">Güncelle</a></td>
			<td><a href="#" class="btn btn-info">Başlıklar</a></td>
		</tr>
	}
</table>
<br />
<a href="/AdminCategory/AddCategory" class="btn btn-dark">Yeni Kategori Ekle</a>