@model EntityLayer.Concrete.Heading
@{
	ViewBag.Title = "AddHeading";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Başlık Ekleme Sayfası</h2>
<br />

@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
<div class="form-group">
	@Html.Label("Başlık Adı")
	@Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
	<br />
	@Html.Label("Kategori")
	@Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.valueC, new { @class = "form-control" })
	<br />
	@Html.Label("Yazar")
	@Html.DropDownListFor(x => x.WriterId, (List<SelectListItem>)ViewBag.valueW, new { @class = "form-control" })
	<br />
	<button class="btn btn-success">Başlığı Oluştur</button>
</div>
}
